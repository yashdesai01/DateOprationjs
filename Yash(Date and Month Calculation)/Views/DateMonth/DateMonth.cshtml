
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Date and Month Calculation Pratical</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>


<body>
    <div class="container">
        <div class="row">
            <div class="body-content">
                <div class="col-md-6">
                    <div class="form-control">
                        <label>Find The List of Next 10 Thursday</label>

                        <input type="date" id="txtTDate" class="form-control" onchange="findThurs()">
                        <label class="col-md-12" id="hdnThur">Here is the list of next 10 Thursday</label>
                        <div id="txtNxtThrus">

                        </div>
                        <br>
                        <button onclick="SaveThur()" type="button" class="btn btn-primary">Save</button>
                    </div>
                </div>
                <div class="form-control input-group">
                    <label class="col-md-12">Find the upcoming weekdays</label>
                    <div class="col-md-6">
                        <input type="date" id="txtSDate" class="form-control" onchange="findWeekDay()">
                    </div>
                    <div class="col-md-6">
                        <input type="date" id="txtEDate" class="form-control" onchange="findWeekDay()">
                    </div>
                    <label class="col-md-6" id="hdnSat"> WeekDay Saturday </label>
                    <label class="col-md-6" id="hdnSun">WeekDay Sunday</label>
                    <div class="col-md-6" id="divSaturday">
                        <label></label>
                    </div>
                    <div class="col-md-6" id="divSunday">
                    </div>
                    <br>
                    <button onclick="SaveWeekdays()" type="button" class="btn btn-primary">Save</button>
                </div>

                <div class="form-control input-group">
                    <label class="col-md-12">Find The Start and End Date For Month</label>
                    <div class="col-md-4">
                        <input type="month" id="txtSEDate" class="form-control" onchange="findSEDate()">
                    </div>
                    <div class="col-md-8">
                    </div>
                    @*<label class="col-md-12" id="hdnThur">Here is the list of next 10 Thursday</label>*@
                    <label class="col-md-6" id="hdnSat"> Starting Monday </label>
                    <label class="col-md-6" id="hdnSun">Ending Sunday</label>
                    <div class="col-md-6" id="divMonday">

                    </div>
                    <div class="col-md-6" id="divESunday">
                    </div>
                    <br>
                    <button onclick="SaveSEDay()" type="button" class="btn btn-primary">Save</button>

                </div>

                <div class="form-control input-group">
                    <label class="col-md-12">Find The Start and End Monday Date of Month</label>
                    <div class="col-md-6">
                        <input type="month" id="txtSMon" class="form-control" onchange="findSEMonDate()">
                    </div>
                    <div class="col-md-6">
                        <input type="month" id="txtEMon" class="form-control" onchange="findSEMonDate()">
                    </div>

                    @*<label class="col-md-12" id="hdnThur">Here is the list of next 10 Thursday</label>*@
                    <label class="col-md-6" id="hdnSat"> Starting Monday </label>
                    <label class="col-md-6" id="hdnSun">Ending Monday</label>
                    <div class="col-md-6" id="divMSMonday">

                    </div>
                    <div class="col-md-6" id="divMEMonday">
                    </div>
                    <br>
                    <button onclick="SaveSEMonday()" type="button" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
<script src="~/App_Js/DateMonthCtrl.js"></script>